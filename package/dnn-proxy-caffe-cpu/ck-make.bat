set CK_SOURCE_FILES=%CK_OBJ_FILES%
set CK_TARGET_FILE=%LIB_NAME%%CK_DLL_EXT%
set CK_TARGET_FILE_D=%CK_TARGET_FILE%

echo *** CK_CC is [%CK_CC]%
echo *** CK_OPT_SPEED is [%CK_OPT_SPEED%]
echo *** CK_FLAGS_DLL is [%CK_FLAGS_DLL%]
echo *** CK_COMPILER_FLAGS_OBLIGATORY is [%CK_COMPILER_FLAGS_OBLIGATORY%]
